<?xml version="1.0"?>
<ruleset name="sc-vendor-packages-json5">
    <description>Wrapper for the Summer CMS JSON5 Module.</description>
    <rule ref="PSR2">
        <!-- Exceptions to the PSR-2 guidelines -->
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps" />
        <exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseBrace" />
        <exclude name="PSR2.ControlStructures.ControlStructureSpacing.SpacingAfterOpenBrace" />
    </rule>

    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <!-- Migration files and tests do not need a namespace defined -->
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <rule ref="PSR1.Classes.ClassDeclaration.MultipleClasses">
        <!-- Migration files and tests fixtures and cases can have multiple classes defined -->
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <file>src/</file>

    <!-- Ignore vendor files -->
    <exclude-pattern>*/assets/*</exclude-pattern>
    <exclude-pattern>*/docs/*</exclude-pattern>
</ruleset>
